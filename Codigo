import telebot

# Conexión con nuestro BOT
TOKEN = '7426773336:AAHbo5WmFaECvLVF4Nfk891mLtv4RWLScnM'
bot = telebot.TeleBot(TOKEN)

# Creación de comandos simples como `/start` y `/help`
@bot.message_handler(commands=['start'])
def send_welcome(message):
    # Extraer el nombre del usuario
    user_name = message.from_user.first_name
    # Responder con un mensaje personalizado
    bot.reply_to(message, f'Buen día, {user_name}! Soy tu asistente personal del grupo INVENSYS S.A. creado con Telebot. Te ayudaré con tus consultas. En caso de que no te quedes conforme con las respuestas o necesites hablar con un agente de nuestro equipo, escribe: "Necesito hablar con un agente". Por favor, ingresa las consultas todo en minúscula.')

@bot.message_handler(commands=['help'])
def send_help(message):
    bot.reply_to(message, 'Te adjunto esta guía para actualizar las preguntas y respuestas futuras, también podrás visualizarlas como preguntar: ')

